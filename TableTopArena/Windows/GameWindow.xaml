                    <Grid Background="{Binding Background}">
                        <Border BorderBrush="Black" BorderThickness="1">
                            <TextBlock Text="{Binding Data}"></TextBlock>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ItemsControl.Resources>
        </DataGrid>-->



    </Grid>
</Window>
